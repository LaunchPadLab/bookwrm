<p id="notice"><%= notice %></p>

<header class="page-header">
  <div class="header-block-container">
    <h1>Browse Books</h1>
    <% if current_user.present? %>
      <%= link_to '+ New Book', new_book_path, class: 'button-white' %>
    <% end %>
  </div>
</header>

<section class="book-block-container">
  <div class="books">
    <% @books.each do |book| %>
      <div class="book">
        <div class="book-cover">
          <% if book.image_url %>
            <%= image_tag  book.image_url %>
          <% end %>
        </div>
        <div class="text-block">
          <h5><%= link_to book.title, book_path(book) %></h5>
          <h6><%= link_to book.author.full_name, author_path(book.author) %></h6>
          <p><%= image_tag("#{book.average_rating}-stars.svg") %> <%= book.average_rating %>/5 (<%= book.num_ratings %> Reviews)</p>
          <% if current_user.present? %>
            <p><%= link_to 'Edit', edit_book_path(book) %></p>
            <p><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</section>
