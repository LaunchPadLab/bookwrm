<p id="notice"><%= notice %></p>

<h1>Authors</h1>
<% if current_user.present? %>
  <%= link_to 'New Author', new_author_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.alphabetical.each do |author| %>
      <tr>
        <td><%= link_to "#{author.reverse_name}", author %></td>
      </tr>
    <% end %>
  </tbody>
</table>

